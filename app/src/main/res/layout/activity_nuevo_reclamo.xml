<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_max"
    android:paddingLeft="@dimen/activity_horizontal_margin_max"
    android:paddingRight="@dimen/activity_horizontal_margin_max"
    android:paddingTop="@dimen/activity_vertical_margin_max"
    tools:context=".activities.reclamo.NuevoReclamoActivity">

    <!-- Toolbar -->
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbarNuevoRec"
        android:title="Nuevo Reclamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        tools:ignore="UnusedAttribute"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:paddingBottom="@dimen/activity_vertical_margin_max"
        android:paddingLeft="@dimen/activity_horizontal_margin_max"
        android:paddingRight="@dimen/activity_horizontal_margin_max"
        android:paddingTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarNuevoRec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Seleccionar Foto"
                android:id="@+id/buttonFoto"
                android:background="@color/primaryColor"
                android:textColor="@color/window_background" />

            <Button
                android:layout_width="50dp"
                android:layout_height="110dp"
                android:id="@+id/buttonNull4"
                android:background="@color/window_background"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@color/cardview_dark_background"
                android:src="@drawable/pic_calle"
                android:id="@+id/imageViewFoto" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Seleccionar Tipo"
                android:id="@+id/buttonCategoria"
                android:background="@color/primaryColor"
                android:textColor="@color/window_background"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="121dp"
                android:id="@+id/buttonNull1"
                android:background="@color/window_background"
                android:visibility="invisible" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categoría"
                    android:paddingTop="10dp"
                    android:textColor="@color/accentColor"
                    android:textStyle="bold"
                    android:id="@+id/textViewCategoria" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCategoria" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub-Categoría"
                    android:textColor="@color/accentColor"
                    android:textStyle="bold"
                    android:id="@+id/textViewSubCat" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editTextSubCat" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Seleccionar Ubicación"
                android:id="@+id/buttonUbicacion"
                android:background="@color/primaryColor"
                android:textColor="@color/window_background"/>

            <Button
                android:layout_width="10dp"
                android:layout_height="121dp"
                android:id="@+id/buttonNull2"
                android:background="@color/window_background"
                android:allowUndo="false"
                android:clickable="false"
                android:singleLine="false"
                android:visibility="invisible" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Calle"
                    android:textColor="@color/accentColor"
                    android:textStyle="bold"
                    android:id="@+id/textViewCalle" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCalle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altura"
                    android:textColor="@color/accentColor"
                    android:textStyle="bold"
                    android:id="@+id/textViewAltura" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextAltura" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Comentario, Explicación o Aclaración"
                android:textColor="@color/accentColor"
                android:textStyle="bold"
                android:id="@+id/textViewComentario" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"/>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
