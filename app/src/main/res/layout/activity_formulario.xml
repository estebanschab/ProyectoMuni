<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="leoh4410.proyectomuni.Formulario">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextNom"
                android:hint="Ingrese su Nombre"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextApe"
                android:hint="Ingrese su Apellido"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextDni"
                android:hint="Ingrese su DNI"
                android:layout_gravity="left" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNULL"
                android:inputType="none"
                android:layout_gravity="center"
                android:text="Domicilio"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textAlignment="center"
                android:textColor="#6a92f9"
                android:enabled="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextCalle"
                android:hint="Ingrese su calle"
                android:editable="false"
                android:inputType="text" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_gravity="center">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextNumDom"
                    android:hint="Nº"
                    android:inputType="number"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPisoDom"
                    android:hint="Piso"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:hint="Dpto."
                    android:layout_gravity="right"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNull2"
                android:inputType="none"
                android:layout_gravity="center"
                android:text="Cuenta"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textAlignment="center"
                android:textColor="#6a92f9"
                android:textIsSelectable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:enabled="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextCorreo"
                android:layout_gravity="center"
                android:hint="Ingrese su dirección de correo"
                android:editable="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextUsu"
                android:hint="Elija un nombre de usuario"
                android:editable="false"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextPass"
                android:hint="Ingrese una contraseña"
                android:layout_gravity="center"
                android:inputType="textPassword" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPass2"
                android:hint="Repita su contraseña"
                android:layout_gravity="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:id="@+id/button3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Enviar"
                    android:id="@+id/buttonSI"
                    android:background="#bbcaef" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/buttonNull"
                    android:background="#ffffff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Cancelar"
                    android:id="@+id/buttonNO"
                    android:background="#bbcaef" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:id="@+id/buttonNull2" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
